# http://localhost:3000
@host = {{backend_url}}

### CREATE EMPLOYEE
POST {{host}}/v1/accounts
content-type: application/json

{
    "name": "Good Developer",
    "phone": "1231123123",
    "role": "EMPLOYEE",
    "username": "Developer2",
    "password": "Abc123@dawd"
}

### CREATE ADMIN
POST {{host}}/v1/accounts
content-type: application/json

{
    "name": "Good Admin",
    "phone": "1231123123",
    "role": "ADMIN",
    "username": "Administrator2",
    "password": "Abc123@dawd"
}

### LOGIN
POST {{host}}/v1/accounts/login
content-type: application/json

{
    "username": "Administrator2",
    "password": "Abc123@dawd"
}

